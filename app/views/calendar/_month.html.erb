<%= turbo_frame_tag "month_#{shift.year}-#{shift.month}" do %>
  <table>
    <caption>
      <%= t("date.month_names")[shift.month] %> - <%= shift.year %>
      <%= current_month?(shift.year, shift.month) ? "(#{t "calendar.now"})" : "" %>
    </caption>

    <thead>
      <tr>
        <th><%= screen_reader_long_text t("calendar.week"), t("calendar.week_long") %></th>
        <th><%= t("calendar.day") %></th>
        <th></th>
        <% shift.groups.times do |i| %>
          <th><%= screen_reader_long_text t("calendar.group_short", group: i + 1), t("calendar.group", group: i + 1) %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% shift.each_with_date do |data, date| %>
        <tr id="day_<%= date.iso8601 %>">
          <% if date.day == 1 || date.wday == 1 %>
            <td rowspan="<%= week_cell_length date %>"><%= date.cweek %></td>
          <% end %>
          <td><time datetime="<%= date.iso8601 %>"><%= date.day %></time></td>
          <td><%= screen_reader_long_text date.strftime("%a"), date.strftime("%A") %></td>
          <% data.each do |shift| %>
            <% if shift == :free %>
              <td></td>
            <% else %>
              <td><%= t "calendar.shifts.#{shift}" %></td>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>

    <tfoot>
      <tr>
        <td colspan="3" title="<%= t "calendar.sum_info"%>"><%= t "calendar.sum" %></td>
        <% shift.groups.times do |i| %>
          <td><%= i %></td>
        <% end %>
      </tr>
    </tfoot>
  </table>
<% end %>
