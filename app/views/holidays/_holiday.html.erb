<%= turbo_frame_tag dom_id(holiday) do %>
  <div class="card">
    <div class="card-body">
      <h2 class="card-title fs-3">
        <strong>Name:</strong>
        <%= holiday.name %>
      </h2>

      <p class="card-text">
        <strong>Date:</strong>
        <%= holiday.date %>
      </p>
    </div>

    <div class="card-footer d-flex gap-3">
      <%= link_to "Edit this holiday", edit_holiday_path(holiday), class: "btn btn-secondary" %>

      <%= button_to "Destroy this holiday", holiday, class: "btn btn-danger", method: :delete, data: { turbo_confirm: "Are you sure?" } %>
    </div>
  </div>
<% end %>
