<h1>Editing school break</h1>

<%= turbo_frame_tag dom_id(@school_break), target: "_top" do %>
  <div class="card">
    <div class="card-body">
      <%= render "form", school_break: @school_break %>

    <div class="card-footer d-flex gap-3">
      <%= link_to "cancel", @school_break, class: "btn btn-warning" %>
      
      <%= link_to "Back to school breaks", school_breaks_path, class: "btn btn-light back_btn" %>
    </div>
  </div>
<% end %>
