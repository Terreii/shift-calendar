{
  "name": "schichtkalender-bosch-rt",
  "version": "3.1.0",
  "description": "Listet alle Kontischichten von Bosch Reutlingen auf.",
  "homepage": "https://schichtkalender-rt.now.sh/",
  "private": true,
  "engines": {
    "node": ">=12.x"
  },
  "scripts": {
    "prepare": "snowpack",
    "dev": "cross-env NODE_ENV=development npm-run-all --parallel dev:*",
    "dev:server": "servor src --reload --browse",
    "dev:style": "postcss ./tailwind.css -o src/style.css -w",
    "start": "serve src",
    "prestart": "npm run build",
    "build": "cross-env NODE_ENV=production npm-run-all build:style build:app build:legacy build:sw",
    "build:app": "snowpack --optimize --clean",
    "build:legacy": "rollup --config",
    "build:sw": "workbox generateSW workbox-config.js",
    "build:style": "postcss ./tailwind.css -o src/style.css",
    "test": "standard ./*.js src/*.js src/components/**/*.js src/lin/**/*.js && jest --coverage",
    "test:watch": "standard ./*.js src/*.js src/components/**/*.js src/lin/**/*.js && jest --watch",
    "update:holidays": "node ./updateHolidays.js"
  },
  "keywords": [],
  "license": "MPL",
  "author": "Christopher Astfalk",
  "standard": {
    "parser": "babel-eslint",
    "env": [
      "jest",
      "es6"
    ]
  },
  "jest": {
    "setupFiles": [
      "./test/setup.js"
    ],
    "testURL": "http://localhost:8080",
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleNameMapper": {
      ".*/web_modules/preact.js": "preact",
      ".*/web_modules/preact/compat.js": "preact/compat",
      ".*/web_modules/preact/hooks.js": "preact/hooks",
      "^react$": "preact/compat",
      "^react-dom$": "preact/compat"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ]
  },
  "snowpack": {
    "webDependencies": [
      "hammerjs",
      "htm",
      "luxon",
      "preact",
      "preact/compat",
      "preact/hooks",
      "preact-router",
      "querystringify",
      "re-reselect"
    ],
    "installOptions": {
      "dest": "src/web_modules"
    }
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.0",
    "@testing-library/preact": "^2.0.0",
    "autoprefixer": "^9.8.4",
    "cross-env": "^7.0.2",
    "hammerjs": "^2.0.8",
    "jest": "^26.1.0",
    "luxon": "^1.24.1",
    "node-ical": "^0.11.3",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1",
    "prompt": "^1.0.0",
    "querystringify": "^2.1.1",
    "re-reselect": "^4.0.0",
    "reselect": "^4.0.0",
    "snowpack": "^1.7.1",
    "standard": "^14.3.4",
    "tailwindcss": "^1.4.6",
    "workbox-cli": "^5.1.3"
  },
  "dependencies": {
    "htm": "^3.0.4",
    "preact": "^10.4.4",
    "preact-router": "^3.2.1"
  }
}
