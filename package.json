{
  "name": "schichtkalender-bosch-rt",
  "version": "3.0.0",
  "description": "Listet alle Kontischichten von Bosch Reutlingen auf.",
  "homepage": "https://schichtkalender-rt.now.sh/",
  "private": true,
  "engines": {
    "node": ">=12.x"
  },
  "scripts": {
    "prepare": "snowpack",
    "predev": "snowpack",
    "dev": "cross-env NODE_ENV=development npm-run-all --parallel dev:*",
    "dev:server": "servor src --reload",
    "dev:style": "postcss ./tailwind.css -o src/style.css -w",
    "start": "serve dist -s -c 1",
    "prestart": "npm run build",
    "build": "cross-env NODE_ENV=production npm-run-all build:style build:app",
    "build:app": "snowpack --optimize",
    "build:style": "postcss ./tailwind.css -o src/style.css",
    "now-build": "snowpack && npm run build",
    "test": "standard ./*.js src/*.js src/components/**/*.js src/lin/**/*.js && jest --coverage",
    "test:watch": "npm run -s test -- --watch",
    "updateFerien": "node src/updateFerien.js"
  },
  "keywords": [],
  "license": "MPL",
  "author": "Christopher Astfalk",
  "standard": {
    "parser": "babel-eslint",
    "env": [
      "jest",
      "es6"
    ]
  },
  "jest": {
    "setupFiles": [
      "./test/setup.js"
    ],
    "testURL": "http://localhost:8080",
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "^react$": "preact-compat",
      "^react-dom$": "preact-compat"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ]
  },
  "snowpack": {
    "webDependencies": [
      "hammerjs",
      "htm",
      "luxon",
      "preact",
      "preact-compat",
      "preact-router",
      "querystringify",
      "re-reselect"
    ],
    "installOptions": {
      "dest": "src/web_modules"
    }
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.0.6",
    "autoprefixer": "^9.7.4",
    "babel": "^6.5.2",
    "babel-core": "^6.24.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^23.6.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-react-jsx": "^6.8.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-stage-0": "^6.5.0",
    "chai": "^4.0.2",
    "core-js": "^3.6.4",
    "cross-env": "^7.0.2",
    "hammerjs": "^2.0.8",
    "jest": "^23.6.0",
    "luxon": "^1.22.0",
    "mkdirp": "^0.5.1",
    "node-ical": "^0.10.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0",
    "preact-jsx-chai": "^2.3.2",
    "prompt": "^1.0.0",
    "querystringify": "^2.1.1",
    "re-reselect": "^3.4.0",
    "regenerator-runtime": "^0.13.3",
    "reselect": "^4.0.0",
    "servor": "^3.2.0",
    "sinon": "^8.1.1",
    "sinon-chai": "^3.4.0",
    "snowpack": "^1.6.0",
    "standard": "^14.3.3"
  },
  "dependencies": {
    "htm": "^3.0.3",
    "preact": "^8.5.3",
    "preact-compat": "^3.19.0",
    "preact-render-to-string": "^4.1.0",
    "preact-router": "^2.5.1",
    "proptypes": "^1.0.0",
    "serve": "^11.3.0",
    "tailwindcss": "^1.2.0"
  }
}
